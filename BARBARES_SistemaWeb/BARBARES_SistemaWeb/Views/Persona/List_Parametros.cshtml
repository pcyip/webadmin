@model BARBARES_SistemaWeb.Models.Persona

@{
    ViewBag.Title = "Personas - Parámetros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li class="active">@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                En esta sección se muestran todos los parámetros de personas ingresados en el sistema. Para visualizarlos dar click en el botón "Detalle" del registro correspondiente en la parte inferior.
            </p>
        </div>
    </div>
}

<h3>Tipo Documento</h3>
<hr class="divider" />
<table class="table table-hover table-bordered responsive-utilities">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Fecha Creación</th>
            <th>Última Modificación</th>
            <th>Activo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in ViewBag.TipoDocumento
                as List<BARBARES_SistemaWeb.Models.TipoDocumento>)
        {
            <tr>
                <td>@p.IdTipoDocumento</td>  
                <td>@p.Nombre</td>              
                <td>@p.Descripcion</td>
                <td>@p.FechaCreacion</td>
                <td>@p.UltimaModificacion</td>
                @if (p.Activo == true)
                {
                    <td>Sí</td>
                }
                else{
                    <td>No</td>
                }
            </tr>            
        }
    </tbody>
</table>

