@model BARBARES_SistemaWeb.Models.TipoDocumento

@{
    ViewBag.Title = "Personas - Parámetros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li class="active">@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                Detalle del registro seleccionado.
            </p>
        </div>
    </div>
}

<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-list-alt"></i>
            <label for="nombre">Nombre:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-credit-card"></i>
            <label for="desc">Descripción:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="desc">
        </div>
    </div>
</div>

<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="creacion">Fecha Creación:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="creacion">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="modificacion">Última Modificación:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="modificacion">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-check"></i>
            <label for="estado">Estado:</label>
        </div>
        <div class="col-xs-3">
            <input type="checkbox" id="estado" value="true">
        </div>
    </div>
</div>

@if (ViewBag.Tipo == 1)
{
    <div class="container-buttons">
        <p>
            <a class="btn btn-success" href="~/Persona/Details_Parametro?id=@ViewBag.Tipo" role="button">Grabar</a>
            <a class="btn btn-danger" href="~/Persona/Index" role="button">Cancelar</a>
        </p>
    </div>

}
