@model BARBARES_SistemaWeb.Models.Persona

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li class="active">@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                Nuevo registro.
            </p>
        </div>
    </div>
}
<h3>Datos Personales</h3>
<hr class="divider">
@using (Html.BeginForm("Create", "Persona", FormMethod.Post))
{
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2 col-md-offset-1">
                <i class="glyphicon glyphicon-align-justify"></i>
                <label for="nombre">Nombres:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="nombre" name="nombre">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-align-justify"></i>
                <label for="appat">Apellido Paterno:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="appat" name="appat">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2 col-md-offset-1">
                <i class="glyphicon glyphicon-align-justify"></i>
                <label for="apmat">Apellido Materno:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="apmat" name="apmat">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-envelope"></i>
                <label for="email">Email:</label>
            </div>
            <div class="col-xs-3">
                <input type="email" class="form-control" id="email" name="email" placeholder="email@dominio.com">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2 col-md-offset-1">
                <i class="glyphicon glyphicon-list-alt"></i>
                <label for="tipoDoc">Tipo Documento:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="tipoDoc" name="tipoDoc">
                    @foreach (var t in ViewBag.TipoDocumento)
                    {
                        <option value="@t.IdTipoDocumento">@t.Nombre</option>            
                    }
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-credit-card"></i>
                <label for="nroDoc">Nro. Documento:</label>
            </div>
            <div class="col-xs-3">
                <input type="number" class="form-control" id="nroDoc" name="nroDoc">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2 col-md-offset-1">
                <i class="glyphicon glyphicon-phone-alt"></i>
                <label for="telefono">Teléfono:</label>
            </div>
            <div class="col-xs-3">
                <input type="tel" class="form-control" id="telefono" name="telefono">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-phone"></i>
                <label for="celular">Celular:</label>
            </div>
            <div class="col-xs-3">
                <input type="tel" class="form-control" id="celular" name="celular">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-user"></i>
                <label for="sexo">Sexo:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="sexo" name="sexo">
                    <option value="F">Femenino</option>
                    <option value="M">Masculino</option>
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-calendar"></i>
                <label for="fechanac">Fecha Nacimiento:</label>
            </div>
            <div class="col-xs-3">
                <input type="date" class="form-control" id="fechanac" name="fechanac">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-check"></i>
                <label for="estado">Estado:</label>
            </div>
            <div class="col-xs-3">
                <input type="checkbox" id="estado" name="estado" value="true">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-user"></i>
                <label for="usuario">Usuario:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="usuario" name="usuario">
                    @foreach (var t in ViewBag.Usuario)
                    {
                        <option value="@t.IdUsuario">@t.Nombre</option>            
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-upload"></i>
                <label for="file">Cargar archivo:</label>
            </div>
            <div class="col-xs-4">
                <div class="input-group">
                    <span class="input-group-btn">
                        <span class="btn btn-default btn-file">Explorar&hellip;
                            <input type="file" multiple>
                        </span>
                    </span>
                    <input type="text" class="form-control" readonly>
                </div>
            </div>
            <div class="col-sm-4">
                <img data-src="holder.js/200x200" alt="Generic placeholder image" class="img-profile img-responsive" />
            </div>
        </div>
    </div>
    <h3>Dirección</h3>
    <hr class="divider">
    <div class="divider"></div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="tipoCalle">Tipo Calle:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="tipoCalle" name="tipoCalle">
                    @foreach (var t in ViewBag.TipoCalle)
                    {
                        <option value="@t.IdTipoCalle">@t.Nombre</option>            
                    }
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="calle">Calle:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="calle" name="calle">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="numero">Número:</label>
            </div>
            <div class="col-xs-3">
                <input type="number" class="form-control" id="numero" name="numero">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="interior">Interior:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="interior" name="interior">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="tipoUrb">Tipo Urbanización:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="tipoUrb" name="tipoUrb">
                    @foreach (var t in ViewBag.TipoUrb)
                    {
                        <option value="@t.IdTipoUrb">@t.Nombre</option>            
                    }
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="urb">Urbanización:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="urb" name="urb">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="mzlt">Mz-Lt:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="mzlt" name="mzlt" placeholder="Mz-Lt">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="referencia">Referencia:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="referencia" name="referencia" placeholder="Escribir la referencia de la dirección.">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="departamento">Departamento:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" name="departamento" id="departamento">
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="provincia">Provincia:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" name="provincia" id="provincia">
                </select>
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="distrito">Distrito:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" name="distrito" id="distrito">
                </select>
            </div>
        </div>
    </div>
    <input type="hidden" class="form-control" id="idTipo" name="idTipo" value="@ViewBag.Tipo">
    <div class="container-buttons">
        <p>
            <button type="submit" class="btn btn-success">Guardar</button>
            <a class="btn btn-danger" href="~/Persona/Index" role="button">Cancelar</a>
        </p>
    </div>

}