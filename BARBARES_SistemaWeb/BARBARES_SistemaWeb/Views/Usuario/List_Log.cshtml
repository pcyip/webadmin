@model List<BARBARES_SistemaWeb.Utils.Select.LogUsuario>

@{
    ViewBag.Title = "Log de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li class="active">@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                En esta sección se muestran el log de las acciones todos los usuarios ingresados en el sistema. Para visualizar dar click en el botón "Detalle" en el registro correspondiente en la parte inferior.
            </p>
        </div>
    </div>
}
 

<h3>Filtros</h3>
<hr class="divider" />
@using (Html.BeginForm("List_Log", "Usuario", FormMethod.Post))
{
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="nombre">Usuario:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre" name="nombre">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-briefcase"></i>
            <label for="accion">Acción:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="accion">
                <option value=""></option>
                <option value="Crear">Crear</option>
                <option value="Modificar">Modificar</option>
                <option value="Buscar">Buscar</option>
                <option value="Eliminar">Eliminar</option>
                <option value="Listar">Listar</option>
            </select>
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="desde">Desde:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="desde" name="desde">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="hasta">Hasta:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="hasta" name="hasta">
        </div>
    </div>
</div>

<div class="container-buttons">
    <p>
        <button type="submit" class="btn btn-primary">Buscar &raquo;</button>
    </p>
</div>

<table class="table table-hover table-bordered responsive-utilities">
    <thead>
        <tr>
            <th>#</th>
            <th>Usuario</th>
            <th>Acción</th>
            <th>Clase</th>
            <th>Anterior</th>
            <th>Posterior</th>
            <th>Fecha</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdLogUsuario</td>
                <td>@p.Usuario</td>
                <td>@p.Accion</td>
                <td>@p.Clase</td>
                <td>@p.Anterior</td>
                <td>@p.Posterior</td>
                <td>@p.Fecha</td>
                <td><a class="btn btn-xs btn-success" role="button" href="~/Usuario/Details">Detalle &raquo;</a></td>
            </tr>            
        }
    </tbody>
</table>
}