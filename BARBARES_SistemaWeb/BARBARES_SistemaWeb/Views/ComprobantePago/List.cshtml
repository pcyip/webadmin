@model BARBARES_SistemaWeb.Models.ComprobantePago

@{
    ViewBag.Title = "Comprobantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li class="active">@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                En esta sección se muestran todos los comprobantes de pago ingresados en el sistema. Para visualizarlos dar click en el botón "Detalle" del registro correspondiente en la parte inferior.
            </p>
        </div>
    </div>
}

<h3>Filtros</h3>
<hr class="divider" />

<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="nombre">Nombres:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="appat">Apellido Paterno:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="appat">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-list-alt"></i>
            <label for="tipoDoc">Tipo Documento:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="tipoDoc">
                <option>DNI</option>
                <option>CE</option>
            </select>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-credit-card"></i>
            <label for="nroDoc">Nro. Documento:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="nroDoc">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-credit-card"></i>
            <label for="nroCom">Nro. Comprobante:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="nroCom">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-envelope"></i>
            <label for="tipo">Tipo:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="tipo">
                <option>Boleta</option>
                <option>Factura</option>
            </select>
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="desde">Desde:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="desde">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="hasta">Hasta:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="hasta">
        </div>
    </div>
</div>

<div class="container-buttons">
    <p>
        <a class="btn btn-primary" href="#" role="button">Buscar &raquo;</a>
    </p>
</div>


