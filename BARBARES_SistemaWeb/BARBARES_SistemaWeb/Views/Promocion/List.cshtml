@model List<BARBARES_SistemaWeb.Utils.Select.Promocion>

@{
    ViewBag.Title = "Promociones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted"><img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li class="active">@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                En esta sección se muestran todos las promociones registrados en el sistema. Para visualizarlos dar click en el botón "Ver más" en el registro correspondiente.
            </p>
        </div>
    </div>
}

<h3>Opciones</h3>
<hr class="divider" />

<div class="btn-group btn-opciones">
    <a class="btn btn-default" href="~/Promocion/Create" role="button">Nuevo</a>
    <a class="btn btn-default" href="~/Promocion/Edit" role="button">Editar</a>
    <button type="button" class="btn btn-default">Activar/Desactivar</button>
</div>

<h3>Filtros</h3>
<hr class="divider" />
@using (Html.BeginForm("List", "Promocion", FormMethod.Post))
{
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="nombre">Nombre:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre" name="nombre">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-check"></i>
            <label for="estado">Semana:</label>
        </div>
        <div class="col-xs-3">
            <input type="checkbox" id="semana" name="semana" value="true">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-usd"></i>
            <label for="min">Mínimo:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="min" name="min">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-usd"></i>
            <label for="max">Máximo:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="max" name="max">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="desde">Desde:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="desde" name="desde" required>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="hasta">Hasta:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="hasta" name="hasta" required>
        </div>
    </div>
</div>
<input type="hidden" class="form-control" id="idTipo" name="idTipo" value="@ViewBag.Tipo">
<div class="container-buttons">
    <p>
        <button type="submit" class="btn btn-primary">Buscar &raquo;</button>
    </p>
</div>
}
<table class="table table-hover table-bordered responsive-utilities">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Semana</th>
            <th>Precio</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPromocion</td>
                <td>@p.Nombre</td>
                <td>@p.Descripcion</td>
                @if (p.Semana == true)
                {
                    <td>Sí</td>
                }
                else{
                    <td>No</td>
                }
                <td>@p.Precio</td>
                <td>@p.FechaInicio</td>
                <td>@p.FechaFin</td>
                <td><a class="btn btn-xs btn-success" role="button" href="~/Promocion/Details">Detalle &raquo;</a></td>
            </tr>            
        }
    </tbody>
</table>
