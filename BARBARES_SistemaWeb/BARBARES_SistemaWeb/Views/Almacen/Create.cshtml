@model BARBARES_SistemaWeb.Models.Tienda

@{
    ViewBag.Title = "Almacenes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li class="active">@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                Nuevo registro.
            </p>
        </div>
    </div>
}

<h3>Datos del Almacén</h3>
<hr class="divider">

@using (Html.BeginForm("Create", "Almacen", FormMethod.Post))
{
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2 col-md-offset-1">
                <i class="glyphicon glyphicon-align-justify"></i>
                <label for="desc">Descripción:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="desc" name="desc">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-calendar"></i>
                <label for="capacidad">Capacidad:</label>
            </div>
            <div class="col-xs-3">
                <input type="number" class="form-control" id="capacidad" name="capacidad">
            </div>
        </div>
    </div>

    <div class="container-form">
        <div class="row">
            <div class="col-xs-2 col-md-offset-1">
                <i class="glyphicon glyphicon-align-justify"></i>
                <label for="area">Área:</label>
            </div>
            <div class="col-xs-3">
                <input type="number" class="form-control" id="area" name="area">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-align-justify"></i>
                <label for="tienda">Tienda:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="tienda" name="tienda">
                    @foreach (var t in ViewBag.Tienda)
                    {
                        <option value="@t.IdTienda">@t.Nombre</option>            
                    }
                </select>
            </div>
        </div>
    </div>
    
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2 col-md-offset-1">

                <i class="glyphicon glyphicon-check"></i>
                <label for="estado">Estado:</label>
            </div>
            <div class="col-xs-3">
                <input type="checkbox" id="estado" name="estado" value="true">
            </div>
        </div>
    </div>

    <h3>Dirección</h3>
    <hr class="divider">
    <div class="divider"></div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="tipoCalle">Tipo Calle:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="tipoCalle" name="tipoCalle">
                    @foreach (var t in ViewBag.TipoCalle)
                    {
                        <option value="@t.IdTipoCalle">@t.Nombre</option>            
                    }
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="calle">Calle:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="calle" name="calle">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="numero">Número:</label>
            </div>
            <div class="col-xs-3">
                <input type="number" class="form-control" id="numero" name="numero">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="interior">Interior:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="interior" name="interior">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="tipoUrb">Tipo Urbanización:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" id="tipoUrb" name="tipoUrb">
                    @foreach (var t in ViewBag.TipoUrb)
                    {
                        <option value="@t.IdTipoUrb">@t.Nombre</option>            
                    }
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="urb">Urbanización:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="urb" name="urb">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="mzlt">Mz-Lt:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="mzlt" name="mzlt" placeholder="Mz-Lt">
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="ref">Referencia:</label>
            </div>
            <div class="col-xs-3">
                <input type="text" class="form-control" id="referencia" name="referencia" placeholder="Escribir la referencia de la dirección.">
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="departamento">Departamento:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" name="departamento" id="departamento">
                </select>
            </div>
            <div class="col-xs-2">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="provincia">Provincia:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" name="provincia" id="provincia">
                </select>
            </div>
        </div>
    </div>
    <div class="container-form">
        <div class="row">
            <div class="col-xs-2  col-md-offset-1">
                <i class="glyphicon glyphicon-map-marker"></i>
                <label for="distrito">Distrito:</label>
            </div>
            <div class="col-xs-3">
                <select class="form-control" name="distrito" id="distrito">
                </select>
            </div>
        </div>
    </div>

    <div class="container-buttons">
        <p>
            <button type="submit" class="btn btn-success">Guardar</button>
            <a class="btn btn-danger" href="~/Almacen/Index" role="button">Cancelar</a>
        </p>
    </div>

}