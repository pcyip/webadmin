@model BARBARES_SistemaWeb.Models.Perfil

@{
    ViewBag.Title = "Perfiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li class="active">@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                En esta sección se muestran todos los perfiles ingresados en el sistema. Para visualizar dar click en el botón "Detalle" en el registro correspondiente en la parte inferior.
            </p>
        </div>
    </div>
}

<h3>Opciones</h3>
<hr class="divider" />

<div class="btn-group btn-opciones">
  <a class="btn btn-default" href="~/Perfil/Create" role="button">Nuevo</a>
  <a class="btn btn-default" href="~/Perfil/Edit" role="button">Editar</a>
  <button type="button" class="btn btn-default">Activar/Desactivar</button>
</div>    

<h3>Filtros</h3>
<hr class="divider" />

<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="nombre">Nombre:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-envelope"></i>
            <label for="estado">Estado:</label>
        </div>
        <div class="col-xs-3">
            <input type="checkbox" id="estado" value="true">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="desde">Desde:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="desde">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="hasta">Hasta:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="hasta">
        </div>
    </div>
</div>

<div class="container-buttons">
    <p>
        <a class="btn btn-primary" href="#" role="button">Buscar &raquo;</a>
    </p>
</div>

<table class="table table-hover table-bordered responsive-utilities">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>Administrador</td>
            <td>Activo</td>
            <td><a class="btn btn-xs btn-success" role="button" href="~/Perfil/Details">Detalle &raquo;</a></td>
        </tr>
        <tr>
            <td>2</td>
            <td>Vendedor</td>
            <td>Activo</td>
            <td><a class="btn btn-xs btn-success" role="button" href="~/Perfil/Details">Detalle &raquo;</a></td>
        </tr>
        <tr>
            <td>3</td>
            <td>Tienda</td>
            <td>Activo</td>
            <td><a class="btn btn-xs btn-success" role="button" href="~/Perfil/Details">Detalle &raquo;</a></td>
        </tr>
    </tbody>
</table>
