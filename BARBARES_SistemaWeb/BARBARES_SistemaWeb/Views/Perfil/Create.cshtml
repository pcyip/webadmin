<h3>Datos del perfil</h3>
<hr class="divider" />
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="nombre">Nombre:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-check"></i>
            <label for="estado">Estado:</label>
        </div>
        <div class="col-xs-3">
            <input type="checkbox" id="estado" value="true">
        </div>
    </div>
</div>

<h3>Roles</h3>
<hr class="divider" />

<!-- Button trigger modal -->
<button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Agregar Roles &raquo;
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Buscar Roles</h4>
            </div>
            <div class="modal-body">
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3 col-md-offset-0">
                            <i class="glyphicon glyphicon-align-justify"></i>
                            <label for="accion">Acción:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="text" class="form-control" id="accion">
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-check"></i>
                            <label for="estado">Estado:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="checkbox" id="estado" value="true">
                        </div>
                    </div>
                </div>
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3  col-md-offset-0">
                            <i class="glyphicon glyphicon-calendar"></i>
                            <label for="desde">Desde:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="date" class="form-control" id="desde">
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-calendar"></i>
                            <label for="hasta">Hasta:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="date" class="form-control" id="hasta">
                        </div>
                    </div>
                </div>

                <div class="container-buttons">
                    <p>
                        <a class="btn btn-primary" href="#" role="button">Buscar &raquo;</a>
                    </p>
                </div>

                <table class="table table-hover table-bordered responsive-utilities">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Acción</th>
                            <th>Descripción</th>
                            <th>Fecha Creación</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>List Perfil</td>
                            <td>Listar todos los perfiles</td>
                            <td>02-01-2014</td>
                            <td>Activo</td>
                        </tr>
                        <tr>
