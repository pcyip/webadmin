@model BARBARES_SistemaWeb.Models.DetalleMovimiento

@{
    ViewBag.Title = "Movimientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li class="active">@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                Nuevo registro.
            </p>
        </div>
    </div>
}

<h3>Datos del movimiento</h3>
<hr class="divider" />

<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="direc">Tipo:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="tipo">
                <option>Traslado</option>
                <option>Ingreso</option>
                <option>Venta</option>
                <option>Merma</option>
                <option>Vencimiento</option>
            </select>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="entrega">Fecha Fin:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="entrega">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-tower"></i>
            <label for="almacen">Almacén:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="almacen">
                <option>La Molina1</option>
                <option>Ate 1</option>
            </select>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-user"></i>
            <label for="total">Usuario:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="total" value="yromero" disabled>
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-shopping-cart"></i>
            <label for="vehiculo">Vehículo:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="vehiculo">
                <option>A1T040</option>
                <option>B0M442</option>
                <option>A1P023</option>
            </select>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-list-alt"></i>
            <label for="pedido">Pedido:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="pedido">
        </div>
    </div>
</div>

<h3>Productos</h3>
<hr class="divider" />

<!-- Button trigger modal -->
<button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    Agregar Productos &raquo;
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Buscar Productos</h4>
            </div>
            <div class="modal-body">
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3 col-md-offset-0">
                            <i class="glyphicon glyphicon-align-justify"></i>
                            <label for="nombre">Nombre:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="text" class="form-control" id="nombre">
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-check"></i>
                            <label for="estado">Estado:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="checkbox" id="estado" value="true">
                        </div>
                    </div>
                </div>
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3 col-md-offset-0">
                            <i class="glyphicon glyphicon-list-alt"></i>
                            <label for="unidad">Unidad:</label>
                        </div>
                        <div class="col-xs-3">
                            <select class="form-control" id="unidad">
                                <option>ml</option>
                                <option>lt</option>
                                <option>gr</option>
                                <option>kg</option>
                            </select>
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-barcode"></i>
                            <label for="presentacion">Presentación:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="number" class="form-control" id="presentacion">
                        </div>
                    </div>
                </div>
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3  col-md-offset-0">
                            <i class="glyphicon glyphicon-usd"></i>
                            <label for="min">Mínimo:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="number" class="form-control" id="min">
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-usd"></i>
                            <label for="max">Máximo:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="number" class="form-control" id="max">
                        </div>
                    </div>
                </div>
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3  col-md-offset-0">
                            <i class="glyphicon glyphicon-calendar"></i>
                            <label for="desde">Desde:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="date" class="form-control" id="desde">
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-calendar"></i>
                            <label for="hasta">Hasta:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="date" class="form-control" id="hasta">
                        </div>
                    </div>
                </div>

                <div class="container-buttons">
                    <p>
                        <a class="btn btn-primary" href="#" role="button">Buscar &raquo;</a>
                    </p>
                </div>

                <table class="table table-hover table-bordered responsive-utilities">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Perecible</th>
                            <th>Precio</th>
                            <th>Fecha Creación</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Pilsen</td>
                            <td>Cerveza Pilsen</td>
                            <td>Sí</td>
                            <td>S/. 5.00</td>
                            <td>02-01-2014</td>
                            <td>Activo</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Cristal</td>
                            <td>Cerveza Cristal</td>
                            <td>Sí</td>
                            <td>S/. 5.50</td>
                            <td>02-01-2014</td>
                            <td>Activo</td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>Cuzqueña</td>
                            <td>Cerveza Cuzqueña</td>
                            <td>Sí</td>
                            <td>S/. 6.00</td>
                            <td>02-01-2014</td>
                            <td>Inactivo</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success">Guardar</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

