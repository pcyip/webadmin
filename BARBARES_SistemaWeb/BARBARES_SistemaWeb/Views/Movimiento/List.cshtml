@model List<BARBARES_SistemaWeb.Utils.Select.Movimiento>

@{
    ViewBag.Title = "Movimientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li class="active">@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                En esta sección se muestran todos los movimientos registrados en el sistema.
            </p>
        </div>
    </div>
}

<h3>Opciones</h3>
<hr class="divider" />

<div class="btn-group btn-opciones">
    <a class="btn btn-default" href="~/Movimiento/Create" role="button">Nuevo</a>
    <button type="button" class="btn btn-default">Anular</button>
</div>

<h3>Filtros</h3>
<hr class="divider" />
@using (Html.BeginForm("List", "Movimiento", FormMethod.Post))
{
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="codigo">Código:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="codigo" name="codigo">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="tipo">Tipo:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="tipo" name="tipo">
                <option value="0"></option>
                @foreach (var t in ViewBag.TipoMovimiento)
                {
                    <option value="@t.IdTipoMovimiento">@t.Nombre</option>            
                }
            </select>
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-list-alt"></i>
            <label for="almacen">Almacén:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="almacen" name="almacen">
                <option value="0"></option>
                @foreach (var t in ViewBag.Almacen)
                {
                    <option value="@t.IdAlmacen">@t.Descripcion</option>            
                }
            </select>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-user"></i>
            <label for="usuario">Usuario:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="usuario" name="usuario">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="desde">Desde:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="desde" name="desde" required>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="hasta">Hasta:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="hasta" name="hasta" required>
        </div>
    </div>
</div>

<div class="container-buttons">
    <p>
        <button type="submit" class="btn btn-primary">Buscar &raquo;</button>
    </p>
</div>

<table class="table table-hover table-bordered responsive-utilities">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Almacén</th>
            <th>Usuario</th>
            <th>Tipo</th>
            <th>Vehículo</th>
            <th>Pedido</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.IdMovimiento</td>
                <td>@a.Descripcion</td>
                <td>@a.Fecha</td>
                <td>@a.Almacen</td>
                <td>@a.Usuario</td>
                <td>@a.Tipo</td>
                <td>@a.Vehiculo</td>                
                <td>@a.Pedido</td>
                <td><a class="btn btn-xs btn-success" role="button" href="~/Movimient/Details">Detalle &raquo;</a></td>
            </tr>
            
        }
    </tbody>
</table>
}