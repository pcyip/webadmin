<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - Barabares</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")

</head>
<body>
    <div id="wrap">
        <div class="container">
            <div>@RenderSection("featured", required: false)</div>
            <div>@RenderBody()</div>
        </div>

    </div>

    <div id="footer">
        <div class="container">
            <p></p>
            <p></p>
            <div class="text-center">
                <a class="btn btn-social-icon btn-lg btn-facebook" href="https://www.facebook.com/Barabares" target="_blank"><i class="fa fa-facebook"></i></a>
                <a class="btn btn-social-icon btn-lg btn-twitter" href="https://twitter.com/Barabares" target="_blank"><i class="fa fa-twitter"></i></a>
                <a class="btn btn-social-icon btn-lg btn-instagram" href="http://instagram.com/barabares" target="_blank"><i class="fa fa-instagram"></i></a>
                <a class="btn btn-social-icon btn-lg btn-google-plus" href="http://www.youtube.com/user/Barabares" target="_blank"><i class="fa fa-youtube"></i></a>              
            </div>
            <p></p>
            <p></p>
            <p class="text-muted">@DateTime.Now.Year &copy; Barabares</p>
        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
