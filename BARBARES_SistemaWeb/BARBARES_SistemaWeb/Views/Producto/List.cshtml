@model BARBARES_SistemaWeb.Models.Producto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li class="active">@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                En esta sección se muestran todos los productos registrados en el sistema. Para visualizar dar click en el botón "Detalle" en el registro correspondiente en la parte inferior.
            </p>
        </div>
    </div>
}

<h3>Opciones</h3>
<hr class="divider" />

<div class="btn-group btn-opciones">
    <a class="btn btn-default" href="~/Producto/Create?id=@ViewBag.Tipo" role="button">Nuevo</a>
    <a class="btn btn-default" href="~/Producto/Edit?id=@ViewBag.Tipo" role="button">Editar</a>
    <!-- Button trigger modal -->
    <button class="btn btn-default" data-toggle="modal" data-target="#myModal">
        Agregar Stock
    </button>
    <button type="button" class="btn btn-default">Activar/Desactivar</button>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Agregar Stock</h4>
            </div>
            <div class="modal-body">
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3 col-md-offset-0">
                            <i class="glyphicon glyphicon-align-justify"></i>
                            <label for="codigo">Código:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="number" class="form-control" id="codigo" value="1" disabled>
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-check"></i>
                            <label for="nomb">Nombre:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="text" class="form-control" id="nomb" value="Pilsen" disabled>
                        </div>
                    </div>
                </div>
                <div class="container-modal">
                    <div class="row">
                        <div class="col-xs-3 col-md-offset-0">
                            <i class="glyphicon glyphicon-list-alt"></i>
                            <label for="stock">Cantidad:</label>
                        </div>
                        <div class="col-xs-3">
                            <input type="number" class="form-control" id="stock">
                        </div>
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-list-alt"></i>
                            <label for="almac">Almacén:</label>
                        </div>
                        <div class="col-xs-3">
                            <select class="form-control" id="almac">
                                <option>La Molina1</option>
                                <option>Ate 1</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-success">Guardar</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</div>

<h3>Filtros</h3>
<hr class="divider" />

<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="nombre">Nombre:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-check"></i>
            <label for="estado">Estado:</label>
        </div>
        <div class="col-xs-3">
            <input type="checkbox" id="estado" value="true">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-list-alt"></i>
            <label for="unidad">Unidad:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="unidad">
                <option>ml</option>
                <option>lt</option>
                <option>gr</option>
                <option>kg</option>
            </select>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-barcode"></i>
            <label for="presentacion">Presentación:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="presentacion">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-usd"></i>
            <label for="min">Mínimo:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="min">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-usd"></i>
            <label for="max">Máximo:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="max">
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="desde">Desde:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="desde">
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="hasta">Hasta:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="hasta">
        </div>
    </div>
</div>

<div class="container-buttons">
    <p>
        <a class="btn btn-primary" href="#" role="button">Buscar &raquo;</a>
