@{
    ViewBag.Title = "Barabares Home";
}
@section featured {
    <div class="masthead">
        <h3 class="text-muted"><img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li class="active">@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li>@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <h2>@ViewBag.Message</h2>
            <p>
                Para poder navegar dentro del sistema, utiliza el menú en la barra de navegación superior.
            </p>
            <p><a class="btn btn-primary btn-lg" role="button" href="http://www.barabares.com" target="_blank">Ir a mi página &raquo;</a></p>
        </div>
    </div>
