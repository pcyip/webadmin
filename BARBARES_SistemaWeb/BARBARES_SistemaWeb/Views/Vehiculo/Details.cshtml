@model BARBARES_SistemaWeb.Models.Tienda

@{
    ViewBag.Title = "Vehiculos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section featured {
    <div class="masthead">
        <h3 class="text-muted">
            <img class="img-thumbnail img-responsive" src="~/images/botella-cabecera.jpg" alt="Barabares">Barabares - Sistema Administrador</h3>
        <ul class="nav nav-justified">
            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
            <li>@Html.ActionLink("Personas", "Index", "Persona")</li>
            <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
            <li>@Html.ActionLink("Pedidos", "Index", "Pedido")</li>
            <li class="active">@Html.ActionLink("Logística", "Index", "Almacen")</li>
            <li>@Html.ActionLink("Reportes", "Index", "Reporte")</li>
            <li>@Html.ActionLink("Administración", "Index", "Usuario")</li>
        </ul>
    </div>
    <p></p>
    <p></p>
    <div class="jumbotron">
        <div class="container">
            <h1>@ViewBag.Title</h1>
            <p>
                Detalle del registro seleccionado.
            </p>
        </div>
    </div>
}

<h3>Datos del Almacén</h3>
<hr class="divider">
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="nombre">Código:</label>
        </div>
        <div class="col-xs-3">
            <input type="text" class="form-control" id="nombre" value="La Molina" disabled>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="capacidad">Descripción:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="capacidad" value="123" disabled>
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-map-marker"></i>
            <label for="marca">Marca:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="marca" disabled>
                <option>Toyota</option>
                <option>Nissan</option>
            </select>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-map-marker"></i>
            <label for="modelo">Modelo:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="modelo" disabled>
                <option>Corolla</option>
                <option>Yaris</option>
            </select>
        </div>
    </div>
</div>
<div class="container-form">
    <div class="row">
        <div class="col-xs-2 col-md-offset-1">
            <i class="glyphicon glyphicon-align-justify"></i>
            <label for="area">Capacidad:</label>
        </div>
        <div class="col-xs-3">
            <input type="number" class="form-control" id="area" value="123" disabled>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-calendar"></i>
            <label for="creacion">Fecha Creación:</label>
        </div>
        <div class="col-xs-3">
            <input type="date" class="form-control" id="creacion" disabled>
        </div>
    </div>
</div>

<div class="container-form">
    <div class="row">
        <div class="col-xs-2  col-md-offset-1">
            <i class="glyphicon glyphicon-check"></i>
            <label for="estado">Estado:</label>
        </div>
        <div class="col-xs-3">
            <input type="checkbox" id="estado" value="true" disabled>
        </div>
        <div class="col-xs-2">
            <i class="glyphicon glyphicon-map-marker"></i>
            <label for="tienda">Tienda:</label>
        </div>
        <div class="col-xs-3">
            <select class="form-control" id="tienda" disabled>
                <option>Corolla</option>
                <option>Yaris</option>
            </select>
        </div>
    </div>
</div>

<div class="container-buttons">
    <p>
        <a class="btn btn-success" href="~/Vehiculo/Edit" role="button">Editar</a>
        <a class="btn btn-danger" href="~/Almacen/Index" role="button">Cancelar</a>
    </p>
</div>